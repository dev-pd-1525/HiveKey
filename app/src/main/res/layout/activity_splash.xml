<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Decorative dots -->
    <TextView
        android:id="@+id/tvDot1"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:background="@color/purple_primary"
        android:alpha="0" />
    <TextView
        android:id="@+id/tvDot2"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="200dp"
        android:background="@color/cyan_accent"
        android:alpha="0" />
    <TextView
        android:id="@+id/tvDot3"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="500dp"
        android:background="@color/green_accent"
        android:alpha="0" />
    <TextView
        android:id="@+id/tvDot4"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="400dp"
        android:background="@color/purple_light"
        android:alpha="0" />

    <LinearLayout
        android:id="@+id/splashContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:alpha="0">

        <!-- Glowing ring behind logo -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center">

            <View
                android:id="@+id/glowRing"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_avatar"
                android:alpha="0.3" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_hivekey_logo"
                android:contentDescription="HiveKey Logo" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.35"
            android:text="@string/app_name"
            android:textColor="@color/purple_primary"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.2"
            android:text=""
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/splash_loading"
            android:textColor="@color/text_hint"
            android:textSize="11sp"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Animated progress line -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1ABB86FC" />

        <View
            android:id="@+id/progressLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/purple_primary" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="40dp"
        android:text="@string/app_version"
        android:textColor="@color/text_hint"
        android:textSize="11sp"
        android:alpha="0.5" />

</FrameLayout>
