<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp">

        <!-- Greeting + Location Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Location Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_location_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="@string/location_unknown"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvRoleBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_role_badge"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:paddingLeft="14dp"
                android:paddingTop="4dp"
                android:paddingRight="14dp"
                android:paddingBottom="4dp"
                android:textColor="@color/purple_primary"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Profile Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_card_glass"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="18dp">

            <ImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_circle_avatar"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                android:contentDescription="Profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ========== USER PANEL CARDS ========== -->

        <!-- Row 1: My Passes + My Profile (visible for ALL) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/cardMyPasses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_feature_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽ«" android:textSize="28sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="@string/card_my_passes" android:textColor="@color/text_primary" android:textSize="12sp" android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_feature_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ‘¤" android:textSize="28sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="@string/card_my_profile" android:textColor="@color/text_primary" android:textSize="12sp" android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- ========== ADMIN-ONLY CARDS ========== -->

        <!-- Admin Row 1: Issue Pass + Manage WiFi -->
        <LinearLayout
            android:id="@+id/rowAdmin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/cardIssuePass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_feature_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ”‘" android:textSize="28sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="@string/card_issue_pass" android:textColor="@color/text_primary" android:textSize="12sp" android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardManageWifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_feature_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“¶" android:textSize="28sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="@string/card_manage_wifi" android:textColor="@color/text_primary" android:textSize="12sp" android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Admin Row 2: Access Logs + Cloud Database -->
        <LinearLayout
            android:id="@+id/rowAdmin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/cardAccessLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_feature_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“Š" android:textSize="28sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="@string/card_access_logs" android:textColor="@color/text_primary" android:textSize="12sp" android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardCloudinary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_feature_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â˜ï¸" android:textSize="28sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="@string/card_cloudinary_db" android:textColor="@color/text_primary" android:textSize="12sp" android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Row: Developer + Terms (visible for ALL) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/cardDeveloper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_feature_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ‘¨â€ðŸ’»" android:textSize="28sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="@string/card_developer" android:textColor="@color/text_primary" android:textSize="12sp" android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardTerms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_feature_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“œ" android:textSize="28sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:gravity="center" android:text="@string/card_terms" android:textColor="@color/text_primary" android:textSize="12sp" android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Logout -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_button_secondary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:text="@string/btn_logout"
            android:textColor="@color/purple_primary"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
